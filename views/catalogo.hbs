<table class="table bg-light table-striped mt-5">
  <thead>
    <tr class="text-center">
      <th colspan="7">
      <a href="/addItem"><button class="btn btn-primary">Agregar producto</button></a>
    </th>
    </tr>
    
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nombre</th>
      <th scope="col">Origen</th>
      <th scope="col">Precio</th>
      <th scope="col">Imagen</th>
      <th scope="col" class="text-center">Accion</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <td>{{id}}</td>
      <td>{{name}}</td>
      <td>{{origin}}</td>
      <td>${{price}}</td>
      <td><img src={{imageURL}} alt="{{name}}"></td>
      <td class="text-center">
        <a href="/handleEdit/{{id}}"><button class="btn btn-danger">Borrar</button></a>
        <a href="/handleEdit/{{id}}"><button class="btn btn-warning btn-md">Modificar</button></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>